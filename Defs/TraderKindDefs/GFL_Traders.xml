<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- Add GFL weapons to Combat Supplier traders -->
	<TraderKindDef>
		<defName>GFL_CombatSupplier</defName>
		<label>combat supplier</label>
		<stockGenerators>
			<li Class="StockGenerator_SingleDef">
				<thingDef>GFL_Weapon_Suomi</thingDef>
				<countRange>0~1</countRange>
			</li>
		</stockGenerators>
	</TraderKindDef>

	<!-- Patch: Add GFL weapons to existing Orbital Combat Supplier -->
	<!-- Note: Removed ParentName as Base_Orbital_Trader doesn't exist in vanilla RimWorld 1.5/1.6 -->
	<!-- This is a minimal standalone trader that can appear in orbital trade ships -->
	<TraderKindDef>
		<defName>GFL_OrbitalCombatSupplier</defName>
		<label>combat supplier</label>
		<stockGenerators>
			<li Class="StockGenerator_SingleDef">
				<thingDef>GFL_Weapon_Suomi</thingDef>
				<countRange>0~1</countRange>
			</li>
			<li Class="StockGenerator_MarketValue">
				<tradeTag>WeaponRanged</tradeTag>
				<countRange>3~7</countRange>
			</li>
		</stockGenerators>
	</TraderKindDef>

</Defs>
