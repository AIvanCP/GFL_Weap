<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- Toxic Infiltration Debuff -->
	<HediffDef>
		<defName>GFL_Hediff_ToxicInfiltration</defName>
		<label>toxic infiltration</label>
		<description>Afflicted with toxic corrosion. Adds 1 stack of Corrosive Infusion each turn. On death, explodes in a purple cloud that spreads this effect to nearby enemies.</description>
		<hediffClass>GFL_Weap.Hediff_ToxicInfiltration</hediffClass>
		<defaultLabelColor>(0.8, 0.3, 0.8)</defaultLabelColor>
		<isBad>true</isBad>
		<makesAlert>false</makesAlert>
		<tendable>false</tendable>
		<everCurableByItem>false</everCurableByItem>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>1200</disappearsAfterTicks>
			</li>
		</comps>
		<stages>
			<li>
				<statOffsets>
					<ToxicResistance>-0.1</ToxicResistance>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>

	<!-- Corrosive Infusion Stackable Debuff -->
	<HediffDef>
		<defName>GFL_Hediff_CorrosiveInfusion</defName>
		<label>corrosive infusion</label>
		<description>Stacks of corrosion damage that deal periodic AoE DOT. Each stack deals 12% of attacker's weapon damage. Gains stacks from Toxic Infiltration and corrosion damage. Maximum 10 stacks.</description>
		<hediffClass>GFL_Weap.Hediff_CorrosiveInfusion</hediffClass>
		<defaultLabelColor>(0.6, 0.2, 0.6)</defaultLabelColor>
		<isBad>true</isBad>
		<makesAlert>false</makesAlert>
		<tendable>false</tendable>
		<everCurableByItem>false</everCurableByItem>
		<minSeverity>0</minSeverity>
		<maxSeverity>10</maxSeverity>
		<initialSeverity>1</initialSeverity>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>600</disappearsAfterTicks>
			</li>
		</comps>
		<stages>
			<li>
				<minSeverity>0</minSeverity>
				<statOffsets>
					<ToxicResistance>-0.05</ToxicResistance>
				</statOffsets>
			</li>
			<li>
				<minSeverity>5</minSeverity>
				<label>corrosive infusion (high)</label>
				<statOffsets>
					<ToxicResistance>-0.15</ToxicResistance>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>10</minSeverity>
				<label>corrosive infusion (critical)</label>
				<statOffsets>
					<ToxicResistance>-0.25</ToxicResistance>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.2</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

</Defs>
