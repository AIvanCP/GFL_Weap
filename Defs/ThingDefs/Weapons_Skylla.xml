<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- Skylla Assault Rifle -->
	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>GFL_Weapon_Skylla</defName>
		<label>Skylla</label>
		<description>An advanced corrosive assault rifle with toxic infiltration systems. When equipped, grants the wielder access to Overpowering Corrosion (throw toxic bomb that chains on kill) and Devastating Drift (dash attack with explosive trail). Toxic Infiltration spreads on enemy death.</description>
		<techLevel>Industrial</techLevel>
		<graphicData>
			<texPath>Things/Weapons/Skylla/Skylla</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<statBases>
			<WorkToMake>22000</WorkToMake>
			<Mass>3.5</Mass>
			<AccuracyTouch>0.62</AccuracyTouch>
			<AccuracyShort>0.72</AccuracyShort>
			<AccuracyMedium>0.68</AccuracyMedium>
			<AccuracyLong>0.50</AccuracyLong>
			<RangedWeapon_Cooldown>1.65</RangedWeapon_Cooldown>
		</statBases>
		<weaponTags>
			<li>Gun</li>
			<li>AssaultRifle</li>
		</weaponTags>
		<weaponClasses>
			<li>RangedLight</li>
		</weaponClasses>
		<costList>
			<Steel>75</Steel>
			<ComponentIndustrial>5</ComponentIndustrial>
			<Plasteel>12</Plasteel>
			<Chemfuel>15</Chemfuel>
		</costList>
		<recipeMaker>
			<researchPrerequisite>GasOperation</researchPrerequisite>
			<skillRequirements>
				<Crafting>7</Crafting>
			</skillRequirements>
			<recipeUsers>
				<li>ElectricSmithy</li>
				<li>FabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>GFL_Bullet_Skylla</defaultProjectile>
				<warmupTime>0.7</warmupTime>
				<range>28</range>
				<burstShotCount>3</burstShotCount>
				<ticksBetweenBurstShots>9</ticksBetweenBurstShots>
				<soundCast>Shot_AssaultRifle</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>10</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
			<li>
				<label>stock</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>10</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
		<comps>
			<li Class="GFL_Weap.CompProperties_WeaponAbilities">
				<abilities>
					<li>GFL_Ability_OverpoweringCorrosion</li>
					<li>GFL_Ability_DevastatingDrift</li>
				</abilities>
			</li>
			<li Class="GFL_Weap.CompProperties_PlayerOnly" />
		</comps>
	</ThingDef>

	<!-- Skylla Bullet -->
	<ThingDef ParentName="BaseBullet">
		<defName>GFL_Bullet_Skylla</defName>
		<label>Skylla bullet</label>
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>14</damageAmountBase>
			<speed>70</speed>
			<armorPenetrationBase>0.32</armorPenetrationBase>
		</projectile>
	</ThingDef>

</Defs>
