<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- Radiance Sniper Rifle -->
	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>GFL_Weapon_Radiance</defName>
		<label>Radiance</label>
		<description>An advanced sniper rifle with integrated Hydro manipulation systems. When equipped, grants the wielder access to Intel Manipulation (single-target Hydro shot that applies debuffs) and Path of Protection (AoE Hydro blast that summons Taryz and grants powerful buffs to allies).</description>
		<techLevel>Industrial</techLevel>
		<graphicData>
			<texPath>Things/Weapons/Radiance/Radiance</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<statBases>
			<WorkToMake>28000</WorkToMake>
			<Mass>4.8</Mass>
			<AccuracyTouch>0.45</AccuracyTouch>
			<AccuracyShort>0.65</AccuracyShort>
			<AccuracyMedium>0.80</AccuracyMedium>
			<AccuracyLong>0.92</AccuracyLong>
			<RangedWeapon_Cooldown>2.8</RangedWeapon_Cooldown>
		</statBases>
		<weaponTags>
			<li>Gun</li>
			<li>SniperRifle</li>
			<li>LongShots</li>
		</weaponTags>
		<weaponClasses>
			<li>RangedHeavy</li>
			<li>LongShots</li>
		</weaponClasses>
		<costList>
			<Steel>90</Steel>
			<ComponentIndustrial>6</ComponentIndustrial>
			<Plasteel>15</Plasteel>
			<Gold>8</Gold>
		</costList>
		<recipeMaker>
			<researchPrerequisite>GasOperation</researchPrerequisite>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
			<recipeUsers>
				<li>ElectricSmithy</li>
				<li>FabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>GFL_Bullet_Radiance</defaultProjectile>
				<warmupTime>1.5</warmupTime>
				<range>45</range>
				<soundCast>Shot_SniperRifle</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>13</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
			<li>
				<label>stock</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>13</power>
				<cooldownTime>2.5</cooldownTime>
			</li>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>11</power>
				<cooldownTime>2.5</cooldownTime>
			</li>
		</tools>
		<comps>
			<li Class="GFL_Weap.CompProperties_WeaponAbilities">
				<abilities>
					<li>GFL_Ability_IntelManipulation</li>
					<li>GFL_Ability_PathOfProtection</li>
				</abilities>
			</li>
			<li Class="GFL_Weap.CompProperties_PlayerOnly" />
		</comps>
	</ThingDef>

	<!-- Radiance Normal Bullet (Bullet damage, not Hydro) -->
	<ThingDef ParentName="BaseBullet">
		<defName>GFL_Bullet_Radiance</defName>
		<label>Radiance bullet</label>
		<graphicData>
			<texPath>Things/Projectile/Bullet_Big</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>30</damageAmountBase>
			<speed>90</speed>
			<armorPenetrationBase>0.38</armorPenetrationBase>
		</projectile>
	</ThingDef>

</Defs>
